	public static void join(StringBuilder buffer, Object[] array, String delim) {
		Debug.isNotNull(buffer);
		Debug.isNotNull(buffer);
		if (delim == null) {
			delim = StringHelper.DEFAULT_SEPARATOR;
		}
		for (int i = 0, n = array != null ? array.length : 0; i < n; ++i) {
			if (i != 0) {
				buffer.append(delim);
			}
			buffer.append(array[i]);
		}
	}
